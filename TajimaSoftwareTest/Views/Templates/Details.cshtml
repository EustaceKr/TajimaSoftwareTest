@model Data.Context.Entities.Template

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Template</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DecorationMethod)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DecorationMethod)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Designs
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var templateDesign in Model.TemplateDesigns)
                {
                    <li>@templateDesign.Design.Name</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
