@model Application.DTOs.TemplateDTO

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Template</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="editForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" id="designsData" name="Designs" />

            <div class="form-group">
                <label asp-for="DecorationMethod" class="control-label"></label>
                <select asp-for="DecorationMethod" class="form-control" asp-items="ViewBag.DecorationMethodList"></select>
                <span asp-validation-for="DecorationMethod" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <hr />
            <h4>Designs</h4>
            <div class="form-group">
                <table class="table" id="designsTable">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var templateDesign in Model.TemplateDesigns)
                        {
                            <tr data-design-id="@templateDesign.Design.Id">
                                <td>@templateDesign.Design.Name</td>
                                <td>
                                    <a href="#" class="remove-design">Remove</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="form-group">
                <label>Add Design:</label>
                <select id="newDesignId" asp-items="@(new SelectList(ViewBag.RemainingDesigns, "Id", "Name"))" class="form-control" multiple>
                    <!-- Existing designs will be removed from this select -->
                </select>
                <br />
                <button type="button" id="addDesignButton" class="btn btn-primary">Add Design</button>
            </div>

            <br />
            <div class="form-group">
                <input type="button" id="saveButton" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            function sortSelectOptions(selectElement) {
                var options = $(selectElement).find("option");
                options.sort(function (a, b) {
                    return a.text.localeCompare(b.text);
                });
                $(selectElement).empty().append(options);
            }

            $("#addDesignButton").click(function () {
                var selectedDesignIds = $("#newDesignId").val();
                if (selectedDesignIds && selectedDesignIds.length > 0) {
                    selectedDesignIds.forEach(function (designId) {
                        var designName = $("#newDesignId option[value='" + designId + "']").text();

                        var newRow = `<tr data-design-id="${designId}">
                                                <td>${designName}</td>
                                                <td>
                                                    <a href="#" class="remove-design">Remove</a>
                                                </td>
                                              </tr>`;

                        $("#designsTable tbody").append(newRow);

                        $("#newDesignId option[value='" + designId + "']").remove();
                    });

                    sortSelectOptions("#newDesignId");
                }
            });

            $("#designsTable").on("click", ".remove-design", function () {
                var designId = $(this).closest("tr").data("design-id");
                var designName = $(this).closest("tr").find("td:first").text();
                $(this).closest("tr").remove();

                $("#newDesignId").append(`<option value="${designId}">${designName}</option>`);

                sortSelectOptions("#newDesignId");
            });

            $("#saveButton").click(function () {
                var selectedDesigns = [];
                $("#designsTable tbody tr").each(function () {
                    selectedDesigns.push($(this).data("design-id"));
                });

                $("#designsData").val(JSON.stringify(selectedDesigns));

                $("#editForm").submit();
            });

            sortSelectOptions("#newDesignId");
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
